{
  "name": "yeti-edit",
  "displayName": "yeti-edit",
  "description": "edit yeti opcode scripts",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yeti-edit.yetiRepopDb",
        "title": "Recalculate translation statistics"
      }
    ],
    "customEditors": [
      {
        "viewType": "yeti-edit.yetiYamlEdit",
        "displayName": "Edit Yeti yaml",
        "selector": [
          {
            "filenamePattern": "**/[0-9][0-9][0-9][0-9].yaml"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vscode:prepublish-web": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map"
  },
  "devDependencies": {
    "@types/line-column": "^1.0.2",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/semaphore": "^1.1.4",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-morph": "^24.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dedent-js": "^1.0.1",
    "line-column": "^1.0.2",
    "semaphore": "^1.1.0",
    "yaml": "^2.6.1",
    "yaml-types": "^0.4.0"
  }
}
